				<orbs_ZINDO>1</orbs_ZINDO>	   <!--  orbs_ZINDO=.true.   -->
				<read_lambda_files>1</read_lambda_files>   <!--   read_lambda_files=.true.  -->
				<!-- ## Adds H atoms at the intrachain P3HT junctions between neighbouring segments, for the treatment of each segement as an entire molecule / site   -->
				<!-- ## This is relevant for the concordance of the number of atoms in the QM files in *.mps files.  -->
				<add_virtual_H_atoms_to_gro>0</add_virtual_H_atoms_to_gro>  <!--  add_virtual_H_atoms_to_gro=.false.  -->

				<!-- ## exclude_virtual_H_atoms=.true.   sets virtual H atoms to 1 in <virtual_mps> section => Excludes H in Emultipole calculation   -->
				<!-- ## exclude_virtual_H_atoms=.false.  sets virtual H atoms to 0 in <virtual_mps> section => Includes H in Emultipole calculation    -->
				<exclude_virtual_H_atoms>1</exclude_virtual_H_atoms>	<!--	exclude_virtual_H_atoms=.true.   -->


				<!-- ## make_geo_orbs_mps_g09  -->
				<!-- ## extra_files_modus = [false, all, make_g09_for_mps, make_ZINDO, make_xyz, make_folders]    applied in "make_geo_orbs_mps_g09"     -->
				<!-- ## make_g09_for_mps: creates g09 inputfiles for the geometries to evaluate with data for *.mps files  --> 
				<!-- ## make_ZINDO: creates g09 input files for the ZINDO calculations, which are needed for *.orbs  -->
				<!-- ## make_xyz: creates name1_n.xyz for the QC_FILE folder as needed for VOTCA calculations.  -->
				<!-- ## make_folders: creates folders QC_FILES and MP_FILES, if they are not present in the current directory.  -->
				<create_geo_orbs_mps_g09>1</create_geo_orbs_mps_g09>  <!-- create_geo_orbs_mps_g09=.true.   -->
				<extra_files_modus>0</extra_files_modus>  <!-- extra_files_modus="false"   -->


				<!-- ###votca_statfile.sql filename: default: state.sql      -->
				<votca_sql_name>statefile13.sql</votca_sql_name>   <!-- votca_sql_name='statefile13.sql'   -->

				<!-- ###mps.tab filename for background polarization.  default: mps_tab_filename='mps.tab'   -->
				<mps_tab_filename>mps.tab</mps_tab_filename>   <!--  mps_tab_filename='mps.tab'     -->


				<!-- ### default: use_votca_global_file_folder=.false.    -->
				<!-- ### default: MP_FILES_folder=MP_FILES                -->
				<!-- ### default: QC_FILES_folder=QC_FILES                -->

				<use_votca_global_file_folder>0</use_votca_global_file_folder>   <!--  use_votca_global_file_folder=.false.  -->
				<MP_FILES_folder>MP_FILES</MP_FILES_folder>
				<QC_FILES_folder>QC_FILES</QC_FILES_folder>
		</enumerated_gro_to_VOTCA_DIPBI_P3HT_prepare>
		<!--################################################################################################################### -->

	
	
	
	
	
	<!--################################################################################################################### -->
	<!--############# OPTIONS FOR run_kmc_votca_multiple ################################################################## -->
	<run_kmc_votca_multiple>
			<N_kMC_random_insertions>4</N_kMC_random_insertions>  <!-- ### number of kmc trajectories default: N_kMC_random_insertions=1 -->
			<use_random_charge_insejection>True</use_random_charge_insejection>  <!-- ### Start simulations at specific injection sites use_P3HT_charge_insejection, use_DIPBI_charge_insejection default use_random_charge_insejection=True -->
			<calc_parallel>True</calc_parallel>  <!-- ### calculate many kMC trajectories in parallel. -->
			<use_my_rates_to_votca_sql>False</use_my_rates_to_votca_sql>  <!-- ### use xtp_createStatefile_fromtxt_t_koch08.py to create sql files -->
			<!-- ### use kmc_fortran program for kmc simulations e.g. for multicharge kmc simulations with VSSM method. -->
			<use_kmc_fortran>True</use_kmc_fortran>  <!-- ### read (some) setup data from the votca options.xml file format and the rate data from a votca *.sql file. : Default: use_kmc_fortran=False ==> VOTCA kmc_multiple is used. -->
			
			
			<use_P3HT_charge_insejection>False</use_P3HT_charge_insejection>  <!-- ### default: use_P3HT_charge_insejection=False -->
			<use_DIPBI_charge_insejection>False</use_DIPBI_charge_insejection>  <!-- ### default: use_DIPBI_charge_insejection=False -->
			<use_PPDI_charge_insejection>False</use_PPDI_charge_insejection>  <!-- ### default: use_PPDI_charge_insejection=False -->
			<use_PBDT_TS1_charge_insejection>False</use_PBDT_TS1_charge_insejection> <!-- ### default: use_PBDT_TS1_charge_insejection=False -->
			<system>DIPBI_P3HT_500K</system>  <!-- ### SYSTEM= DIPBI_P3HT_500K or DIPBI_P3HT_700K, DIPBI_P3HT_900K; or  P3HT_pur ; PPDI_PBDT_TS1 -->
			<datafiles>
					<readsystem>1</readsystem>
					<gro_filename>data/equi_2000ps_500k_def2_theta_75_G0.gro</gro_filename>
					<neighbourlist_filename>data/new_sorted_neighbours_equi_2000ps_500k_def2_theta_75_G0.ngh</neighbourlist_filename>
					<no_box_COM_filename>data/no_box_equi_2000ps_500k_def2_theta_75_G0.xyz</no_box_COM_filename>
					<JAB_filename>data/Datenauswertung_SAB_H_H0_Jab_H0_H0_SAB_L0_L0_Jab_L0_L0_G0.dat</JAB_filename>
			</datafiles>
				
			<modify_rates>False</modify_rates>  <!-- ### adapt the rate calculation e.g. necessary for different U_ext or temperature T -->
			<rate_type>marcus</rate_type> <!-- ### rate_type = jortner or marcus or weiss_dorsey     or rate_type_scan -->
			<dump_rates>True</dump_rates>  <!-- ### dump rates to 1 for a certain cutoff -->
			<cutoff_dump_rate>1.0E-10</cutoff_dump_rate>  <!-- ### Set all rates in *.sql file which are smaller than cutoff_dump_rate to the value: cutoff_dump_rate   default: cutoff_dump_rate=1.0E-15 -->
			<N_xy_plane>36</N_xy_plane>  <!-- ### also for xy, xz and yz-plane; default: N_xy_plane=36 -->
	</run_kmc_votca_multiple>
	<!--################################################################################################################### -->


	<!--  VOTCA input -->
	<rates>
		<temperature>300</temperature> 			<!-- T [K] -->
		<field>0 0 1000000</field>    		<!-- field x y z -->
		<method>marcus</method>                 <!-- 'marcus' or 'jortner' -->
	</rates>


	<!--################################################################################################################### -->
		<!-- KMC CALCULATORS +++++++++++++++++++++++++++++++++++++ -->
		<!-- run_kmc_fortran  optionsfile -->

	<kmcmultiple>
			<runtime unit='integer'>1.0E5</runtime>       <!-- 1E-5 t_koch08 -->
			<outputtime unit='integer'>1E9</outputtime>   <!-- 1E-7 t_koch08 -->
					<trajectoryfile>trajectory.csv</trajectoryfile>
					<seed>500</seed>
					<injection>*</injection>
					<injectionmethod>random</injectionmethod>  <!-- run_kmc_fortran: 	###injectionmethod='random'  [default: random] --> 
										<!--			### injectionmethod = "injection_node"   ; selects a single node for charge injection, set :injection_node as node_id or Resid" -->
										<!--			### injectionmethod = "injection_node_list" ; selects the nodes from the list below -->
										<!--			### injectionmethod = "injection_segment_type"  ; select a specific segment type, where the injection starts. Select the starts e.g.  <injection_segment_type>DIPBI</injection_segment_type>  -->
					<injection_segment_type>DIPBI</injection_segment_type> 
					<numberofcharges>1</numberofcharges>  <!-- 4 t_koch08 -->
					<fieldX>0</fieldX>
					<fieldY>0</fieldY>
					<fieldZ>1.0E+7</fieldZ>
					<carriertype>hole</carriertype>
					<temperature>300</temperature>
					<explicitcoulomb>0</explicitcoulomb>
					<rates>statefile</rates>
			<!-- +++ EXTRA run_kmc_fortran  options: +++ -->
			<check_hopping_pair_composition>1</check_hopping_pair_composition>   <!-- analysis which sites were occupied in the simulation; default =1 [ON=1,OFF=0]-->
			<escaperatefile>Escape_Rates</escaperatefile>
			<makeescaperatefile>0</makeescaperatefile>
			<debug>0</debug>

			<unite_notes_for_kmc>0</unite_notes_for_kmc> <!-- unite two nodes N1 and N2 to a single node N1*, if only back-and forth rates dominate. default: unite_notes_for_kmc=0  ! OFF -->
			<unite_nodes_with_same_type>1</unite_nodes_with_same_type> <!-- Two nodes N1 and N2 can only be united if they posses the same type.  default: unite_nodes_with_same_type=1  -->
			<cutoffk1k2>100</cutoffk1k2> <!-- cutoff to unite two nodes if the k_12 / k_13 > cutoffk1k2 --> 


			<!-- +++ KMC META DYNAMICS +++ -->
			<kmcmetadynamics>0</kmcmetadynamics>      <!--  ## Activate kmc meta dynamics  to improve sampling of improbable transitions (rough energy landscape)   default: kmcmetadynamics=0 ! OFF   -->
			<alpha>1</alpha>  <!--  alpha = exp{ - 1 / (kB T) }   default: alpha=0.995 -->
			

			<!-- +++ KMC PATHWAY - High current pathway +++ --> 
			<calc_pathway>0</calc_pathway>  <!-- Calculate a pathway for high currents, where the charge crosses the box once -->
			<store_trajectory>0</store_trajectory> <!-- store charge carrier trajectory in *.xyz format;  needed for calc_pathway -->
			<N_testpathways>1</N_testpathways> <!-- Number_of_calculated_pathways: Number of pathways with high current, which are calculated -->
			<reset_pathway>1</reset_pathway>   <!-- reset_pathway_at_initial_site: for pathfinder settings: (reset_pathway=1) When calculation the charge carrier trajectory on can reset the system, if a charge comes back to the origin before crossing the simulation box, default: reset_pathway_at_initial_site=0 ; (reset_pathway=0) -->
			<!--gro_inputfile>gro_HDI_M_out.gro</gro_inputfile>  -->   <!-- gromacs filename *.gro with morphology data -->
			<gro_inputfile>../data/equi_2000ps_500k_def2_theta_75_G0.gro</gro_inputfile> 
			
			<wrap_all_molecules_into_the_box>1</wrap_all_molecules_into_the_box>  <!--  Wrap molecules in *.gro back into the box using periodic boundary conditions.-->
			<unitePBCsplitmolecule>0</unitePBCsplitmolecule> <!-- unites all molecules if it is unwraped with PBC in the *.gro file -->
			<cutsidechainsingro>1</cutsidechainsingro> <!-- cut the side chains from the gro file for DIPBI/P3HT, -CH2 groupe for P3HT. --> 
			<dump_gro_dI_max>1</dump_gro_dI_max> <!-- Write out a gromacs *.gro file for molecules on the pathway with the highest current; only available is a gromacs *.gro file is read. -->
			
	</kmcmultiple>
	<!--################################################################################################################### -->
	<!-- ++++++++++++++++++  Dijkstra Algorithm  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<dijkstra>
			
			<calcpathwayDijkstra>0</calcpathwayDijkstra> <!-- Calculate a high current pathway -->
			<modus_Dijkstra>Dijkstra_kmcNetwork</modus_Dijkstra> <!-- Keys: 'Dijkstra_kmcNetwork',  'Dijkstra_newNetwork', 'Dijkstra_loadNetwork', 'false' -->
			<start_Dijkstra>14</start_Dijkstra> <!-- index to start the Dikstra pathway default=10-->
			<ziel_Dijkstra>41</ziel_Dijkstra>   <!-- index to start the Dikstra pathway default=10-->
			<writenetworkfiledijkstra>1</writenetworkfiledijkstra>        <!-- write / store the Graph for the Dijkstra evaluation the Dijkstra network file in networkfile_Dijkstra -->
			<networkfile_Dijkstra>Netztest.txt</networkfile_Dijkstra>     <!-- Dijstra network file -->
			<calc_pathway_between_zones>1</calc_pathway_between_zones>    <!--   ## Define a zone for inital points and and dublicate it for a second final zone for the target of a box transversing pathway in PBC  [default: alc_pathway_between_zones=.false. ]  -->
			<loopstartzone>1</loopstartzone> <!-- Loop for all initial nodes in the start zone default: loopstartzone=0 -->
			<zonenbreite>5</zonenbreite> <!-- Zonenbreite fÃ¼r Start und Endzone in Angstroem default: 5 Ang --> 
			<log10abs>0</log10abs>  <!-- log10 abs(R) for the evaluation of the pathway with the shortes resistance / highest current flow-->
	</dijkstra>
	<!-- +++++++++++++ End  Dijkstra Algorithm  ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
	<!--################################################################################################################### -->
</options>
