	<!-- ####   Defaults variables for calc_current_I_from_kmc_data  / current_I_form_votca_sql_data #### --> 	
	<calc_current_I>
		<calc_local_current_dr>1</calc_local_current_dr> <!--  calc_local_current_dr=true chooses the current equation to VOTCA manual eq.2.43 -->
		<scale_to_interval_0_1>0</scale_to_interval_0_1> <!--  scale the current to the intervall between [0,1] for a better visualization of the local currents -->                                                                                                              
		<make_current_to_cubefile>1</make_current_to_cubefile> <!-- create a *.cube file for the total current densiity inside the simulation box, with Ix, Iy, Iz the currrent components and I_tot for the total current -->                                                                                                        
		<!-- settings for the scaling of current I and the occupation numbers p_occ. -->
		<use_logscale_I>1</use_logscale_I>          <!-- calc log10(abs(I)) -->                                                                                                                           
		<use_logscale_p_occ>1</use_logscale_p_occ>  <!--  ## calculate log10 from p_occ for the displayed occupation numbers default: use_logscale_p_occ -->                                                                                                                  
		<make_scale_p_occ_pdb>1</make_scale_p_occ_pdb> <!-- ## creates a *.pdb file with points in a row, which can form a coloured / colour-coded bar. -->
																		  
		<N_occ_scale_points>100</N_occ_scale_points> <!--  ## Number of points in the occupation scale file,  default: 100;  use make_scale_p_occ_pdb=1  -->
		<make_scale_I_pdb>1</make_scale_I_pdb>       <!--  ## creates a *.pdb file with points in a row, which can form a coloured bar. -->                                                                                                                  
		<N_I_scale_points>100</N_I_scale_points>  <!--  ## Number of points in the occupation scale file,  default: 100;  use make_scale_I_pdb=1  -->
		<current_only_use_sites_with_highest_contributions>1</current_only_use_sites_with_highest_contributions> <!--  print only the sites with the highes current to the overall current to the *.pdb files --> 
		<occupations_only_use_sites_with_highest_contributions>1</occupations_only_use_sites_with_highest_contributions>  <!--  print only the sites with the highes occupation numbers to the *.pdb files --> 
		<calc_high_current_pathway>0</calc_high_current_pathway>             <!-- DO NOT use this, to calculate the current pathways. Programm does a random walk and selectes ways with the highest current. The backward direction is blocked afterwards, so no connection/jump is travelled twice. default=0 -->                                                                                                     
		<read_reference_grofile>1</read_reference_grofile>                   <!-- read the reference data from a gro_file -->                                                                                                              
		<wrap_all_molecules_into_the_box>1</wrap_all_molecules_into_the_box> <!-- use periodic boundary conditions to transfer all molecules, which reach out of the simulation box and move them into the box. -->
		
		<scale_J_vmd_factor>10.0</scale_J_vmd_factor> <!--    ## for the visualization in vmd. default: scale_J_vmd_factor=1.0   --> 
		
		<J_max_percent_cutoff>0.95</J_max_percent_cutoff>         <!--    #### 0.0001   ;  0.9  ; [0.0,1.0]  e.g. J_max_percent_cutoff=0.9 only the highest  currents 10% are printed. J_max_percent_cutoff=1.0 => All are printed  -->
		<p_occ_max_percent_cutoff>0.95</p_occ_max_percent_cutoff> <!--    ####    highest 95 => highest 5 % of occupation numbers are printed -->
		
		<scalebox>0.025</scalebox>  <!-- ## scalefactor for partitioning of boxes. scalefactor = [0,1]  for the durrent density plots   ## good value: scalebox=0.03 DIPBI/P3HT  ## only change small scale eg: 0.025 P3HT  -->

		<set_filenames>0</set_filenames>  <!-- set the following file names here in the *.xml file, instead of reading them from the command line -->
		<gro_inputfile>my_grofile.gro</gro_inputfile>  <!-- ####grofile data for pdb with current or occupation data in the occupation column --> 	
		<current_I_out_filename>my_current_I_out_arrow_vmd.dat</current_I_out_filename>
		<tot_occ_filename>tot_occ_filename.dat</tot_occ_filename>
		<marcus_rate_filename>marcus_rate_statefile.dat</marcus_rate_filename>
		<no_box_COM_file>no_box_COM_filename.dat</no_box_COM_file>
		<current_I_out_filename>my_current_I_out_arrow_vmd.dat</current_I_out_filename>
		<votca_sql_name>state.sql</votca_sql_name>
	</calc_current_I>
	<!-- ####  end variables for calc_current_I_from_kmc_data / current_I_form_votca_sql_data--> 	
