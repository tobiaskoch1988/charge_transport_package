		<monomerBxyz>lambda_in/Ethan/Ethan_B.xyz</monomerBxyz> <!-- coordinates e.g. monomerB.xyz -->
	</lambda_in_pair>



	<!-- ### ########################################################################### --> 	
	<lambda_out_dE_out>
			<neighbourlist_filename>data/new_sorted_neighbours_equi_2000ps_500k_def2_theta_75_G0.ngh</neighbourlist_filename>
			<gro_inputfile>data/equi_2000ps_500k_def2_theta_75_G0.gro</gro_inputfile>  <!-- INPUT morphology.gro -->
			<residA>1</residA>         <!-- Resid from molecule A -->
			<typeA>DIPBI</typeA>         <!-- Molecular type from molecule A -->
			<residB>2</residB>       <!-- Resid from molecule B -->
			<typeB>DIPBI</typeB>         <!-- Molecular type from molecule B -->
			<calc_lambda_out_entire_box>0</calc_lambda_out_entire_box>                                          <!--  Berechnung von allen resids fuer die Wahl von resid1  -->
			<calc_lambda_out_single_pair>0</calc_lambda_out_single_pair>                                          <!--  Berechne nur ein Paar: resid1 resid2  -->
			<calc_lambda_out_nearest_neighbours_list_NN_max>0</calc_lambda_out_nearest_neighbours_list_NN_max>         <!--  Beschrenkung auf eine feste Anzahl an Nachbarn z.B. N_NN_max=12 (Empfohlen)  -->
			<calc_lambda_out_r_cut_NN>0</calc_lambda_out_r_cut_NN>                                             <!--  Berechne die Naechsten Nachbarn anhand eines Abstandskriterium: r_cut_NN ( Nicht verwechseln mit r_cut_lambda_out  -->
			<calc_lambda_out_nearest_neighbours_list_all>0</calc_lambda_out_nearest_neighbours_list_all>                  <!--  Berechne fuer alle moeglichen Nachbarn in der Liste lambda_out. (Kann sehr lang werden)  -->
			<calc_molpol>0</calc_molpol>             
			<select_calc_molpol>" alpha "</select_calc_molpol>                              <!-- '  calc_molpol: alpha   'r_cut_lambda_out  Gesamtkugel fuer Berechnung von calc_molpol mit modus=[alpha, r_cut ,all ]  -->
			<r_cut_lambda_out>36.0</r_cut_lambda_out>                   <!--  In Angstroem. Gesamtkugel fuer Berechnung von lambda_out   -->
			<r_cut_NN>16.0</r_cut_NN>                                 <!--  In Angstroem. Maximale Umkreis der naechsten Nachbarn, ob Paar berechnet werden soll.  -->
			<N_NN_max>12</N_NN_max>                                  <!--  Anzahl der naechsten Nachbarn fuer die zu resid1 die zweite resid gefunden werden soll. default N_NN_max:12 -->
	</lambda_out_dE_out>
