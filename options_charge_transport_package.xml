<!-- ### Defaults for rates_to_votca_sqlfile  -->
	<rates_to_VOTCA_sqlfile>
				 <DIPBI_P3HT_calc>0</DIPBI_P3HT_calc>
				 <DIPBI_P3MT_calc>0</DIPBI_P3MT_calc>
				 <P3HT_pur_calc>0</P3HT_pur_calc>
				 <P3MT_pur_calc>0</P3MT_pur_calc>
				 <PPDI_PBDT_TS1_calc>0</PPDI_PBDT_TS1_calc>
				
				 <N_Neighbours>13</N_Neighbours> <!-- ## Number of neighbours in the neighbourlistfile -->

				<!-- ## multigeo dafault: multigeo_setup=0  -->
				 <multigeo_setup>0</multigeo_setup>
				<!-- ## default: Geo_Step=0 for multigeo_setup. Usually parameter is extracted from input data _G${Geo_step} in *.gro file -->
				<Geo_Step>0</Geo_Step>
				<rate_type>marcus</rate_type>    <!-- ## rate_type = "jortner" or "marcus" or "weiss_dorsey"  -->
				<set_dE_out_and_l_out_to_zero>0</set_dE_out_and_l_out_to_zero> <!-- ## set all outer_sphere contributions to zero dE_out und lambda_out, overrides all other cases. default:  set_dE_out_and_l_out_to_zero=1 == ON! -->
				<set_J_AB_intermolecular_to_zero>0</set_J_AB_intermolecular_to_zero>  <!-- ## set all J_AB_intermolecular to zero. Only check intramolecular transport. default: set_J_AB_intermolecular_to_zero=0  -->
				 

				<!-- ## Kondo parameter alpha for weiss-dorsey rate   -->
				<!-- ## Asadi. et A. Nature Com. 2013  -->
				<!-- ## default: Votca Kondo=4.0 ; rr-P3HT = 3.6 ; rr-P3HT doped 6.75    -->
				<Kondo>4.0</Kondo>

				<!-- ###Default: TEST_RATES=0 only evaluates rates with selected properties.  -->
				 <TEST_RATES>0</TEST_RATES>
				 <set_filenames>0</set_filenames>    <!--  read the following file names listed here for reference data default=0 => OFF-->
				 <l_out_filename>data/l_out_filename.dat</l_out_filename>  <!--  ##!'l_out_filename_P3HT_pur_1000ps_900K_65_G0_add_H_not_virtual.dat' -->
				 <E_multipole_filename>data/E_out_filename.dat</E_multipole_filename> 
				 <J_AB_filename>data/Datenauswertung_SAB_H_H0_Jab_H0_H0_SAB_L0_L0_Jab_L0_L0_G0.dat</J_AB_filename>
				 <l_in_h_filename>0</l_in_h_filename>   <!-- Filename for matrix with lambda_in data  for holes -->
				 <l_in_e_filename>0</l_in_e_filename>   <!-- Filename for matrix with lambda_in data  for electrons -->
				 <dE_in_h_filename>0</dE_in_h_filename> <!-- Filename for matrix with internal site-energy difference  data  for holes -->
				 <dE_in_e_filename>0</dE_in_e_filename> <!-- Filename for matrix with internal site-energy difference  data  for electrons -->
				
				<!-- ## J_AB   -->
				 <Read_J_AB_from_sql_file>0</Read_J_AB_from_sql_file>   <!-- Reads the JAB values from the votca state.sql file e.g. the ZINDO/MOO data. -->
				 <Read_J_AB>1</Read_J_AB>  <!-- Reads the Data from a DIPRO data dile given with J_AB_filename  [default: Read_J_AB=.true.] -->

				<!-- ## Parametrized for DIPBI:P3MT [3mer,5mer,7mer]                             -->
				<!-- ## Scaling J_AB(y) = f(x) * J_AB                                            -->
				<!-- ## Available methods:   y_scale_method=[CDFT,PBE/6-311G**,B3LYP/3-21G,PM3]  -->
				<!-- ## Available methods:   x_scale_method=[PBE/6-311G**,ZINDO,PM3,DFTB/MIO,DFTB/3OB,B3LYP/3-21G*,B3LYP/6-31G*,B3LYP/6-311G**]   -->
				<!-- ## Caution, not all combinations are implemented.   -->
				<scale_dipro_results>1</scale_dipro_results>  <!-- scale_dipro_results default= .false. -->
				<linear_scaling_J_AB>0</linear_scaling_J_AB>  <!-- linear_scaling_J_AB default= .false. -->
				<x_scale_method>PM3</x_scale_method>
				<y_scale_method>CDFT</y_scale_method>


				<!-- ## Can read the geometric data from the J_AB_file and evaluate the matrix element J_AB via a linear fit from the geomentic data.                     -->
				<!-- ##                                                                                                                                                   -->
				<!-- ## Use a method in the list: J_AB_fit_method_geometry=[MA,MMA,COM_H,Lin_Combi]                                                                       -->
				<!-- ## MA = minimal distance, MMA = mean minimal distance,  COM = center of mass distanc, COM_H = center of mass distance with hydrogen atoms included,  -->
				<!-- ## Lin_Combi: Use a linear combination for a fit of MA,MMA,COM_H to obtain a value for J_AB_hole, J_AB_elec                                          -->
				 <Read_COM_COM_H_MA_MMA_theta_Data_from_J_AB_file>0</Read_COM_COM_H_MA_MMA_theta_Data_from_J_AB_file>    <!-- Read_COM_COM_H_MA_MMA_theta_Data_from_J_AB_file default= .false. -->
				 <J_AB_fit_method_geometry>Lin_Combi</J_AB_fit_method_geometry>

				<!-- ## min distvector with subhopping sites  -->
				<use_min_d_COM_vector_list>0</use_min_d_COM_vector_list><!-- use_min_d_COM_vector_list   default= .false. uses the COM distance. -->
				<min_d_modus>COM</min_d_modus>  <!-- min_d_modus = [COM, MA, MMA, RCOM] Calculate the intermolecular distance e.g. in rates default: min_d_modus = COM  -->
				
				
				 <print_data_collection_files>0</print_data_collection_files> <!-- default= 0 = false -->
				 <mobility_estimate>0</mobility_estimate>  <!-- Linerar estimate for the charge carrier mobility using Einstein-Relation. Note: It is a poor guess. default: .false. -->
				 <make_Histogramm>0</make_Histogramm>       <!-- create a histogramm default: .false. -->

				<!-- ## Intramolecular   -->
				<read_intramolecular_data>1</read_intramolecular_data>  <!--  read_intramolecular_data=.true.  -->
				<!-- ## uses cosfit for | J_AB(el)| and scaled dE_intra_el=-0.65* dE_intra_lo  ###default=0  -->
				<use_fit_intramolecular>0</use_fit_intramolecular>
				<!-- ## use vertical energy gap from CDFT dE_vert_CDFT to approximate the dE_in_AB=dE_A_in -dE_B_in  ###default=0  -->
				<use_dE_in_AB__approx__dE_vert_CDFT>1</use_dE_in_AB__approx__dE_vert_CDFT>   <!-- default: .true. -->
				
				<Use_reference_data_from_P3HT32mer>0</Use_reference_data_from_P3HT32mer>   <!-- default: .false. -->
				<use_lambda_out_random_number_Gauss_distribution_data>0</use_lambda_out_random_number_Gauss_distribution_data>	  <!-- default: .false. -->
				<Read_l_out>0</Read_l_out> <!-- read lambda out data from an input file default: Read_l_out=0  => OFF! -->
				<!-- ## E_multiiplote with Thole model for electrostatic contributions dE  -->
				<Read_E_multipole_out>0</Read_E_multipole_out>  <!-- default: .false. -->
				<!-- ## Gaussian distribution for P3HT or DIPBI data for lam_out and E_out:  E_out_randomized_distribution=.false.  -->
				<E_out_randomized_distribution>0</E_out_randomized_distribution>  <!-- default: .false. -->
				<!-- ## outer-sphere contributions center and standard deviation, if contributions from random numbers are take into account -->
				
						<l_out_h>0.0</l_out_h>
						<l_out_e>0.0</l_out_e>
						<sig_l_out_h>0.0</sig_l_out_h>
						<sig_l_out_e>0.0</sig_l_out_e>
						
						<E_out_h>0.0</E_out_h>
						<E_out_e>0.0</E_out_e>
						<sig_E_out_h>0.0</sig_E_out_h>
						<sig_E_out_e>0.0</sig_E_out_e>
				
	</rates_to_VOTCA_sqlfile>
